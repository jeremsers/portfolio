---
import Header from "../../components/Header.astro";
import Footer from "../../components/Footer.astro";
import { ViewTransitions } from "astro:transitions";
import {SEOMetadata} from 'astro-seo-metadata'
import '@fontsource-variable/cabin'
const { title, frontmatter } = Astro.props;
console.log(frontmatter);

---

<!doctype html>
<html lang="fr">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <SEOMetadata
    siteName={title}
    title={title}
    description={frontmatter ?  frontmatter.description : 'liste des projets'}
    image={'/favicon.avif'}
    favicon={'/favicon.avif'}
    author="Jeremy Sersoub"
    copyright="ISC"
    astroSitemap={true}
    canonicalUrl={Astro.url.toString()}
    type={'website'}
    astroGenerator={true}
    />
    <ViewTransitions />
    <title>{title}</title>
  </head>
  <body>
    <Header type="projet" />
    <slot />
    <Footer />
  </body><style is:global lang="scss">
 

    :root {
      --accent: 136, 58, 234;
      --accent-light: 224, 204, 250;
      --accent-dark: 49, 10, 101;
      --accent-gradient: linear-gradient(
        45deg,
        rgb(var(--accent)),
        rgb(var(--accent-light)) 30%,
        white 60%
      );
    }
    html {
      font-family: 'Cabin Variable', sans-serif;
      background: $second;
      background-size: 224px;
      line-height: 1.3;
    }
    code {
      font-family:
        Menlo,
        Monaco,
        Lucida Console,
        Liberation Mono,
        DejaVu Sans Mono,
        Bitstream Vera Sans Mono,
        Courier New,
        monospace;
    }
    body {
      position: relative;
      display: flex;
      flex-direction: column;
      justify-content: center;
      margin: 0 auto;
      height: 100%;
    }
  </style>
</html>
