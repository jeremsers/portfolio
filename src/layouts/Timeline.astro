    clip-path: polygon(0 0, 100% 50px, 100% calc(100% - 50px), 0 100%);
    margin-top: -40px;
    @include animate-section-l;

    & h2 {
      @include title($main);
      animation: leftShiftSec linear both;
    animation-timeline: view();
    animation-range: entry 75% cover 75% ;
    }
  }

  .design {
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .timeline {
    width: 80%;
    height: auto;
    max-width: 800px;
    padding-block: 20px;
    margin: 0 auto;
    display: flex;
    flex-direction: column;
    
  }

  .timeline-content {
    display: flex;
    flex-direction: column;
    text-align: center;
    padding: 10px;
    background: #43d590;
    color: $text-prim;
    padding: 5px;
    transition: 0.4s ease;
    overflow-wrap: break-word !important;
    margin: 20px 10px;
    border-radius: 10px;
  }

  @media screen and (min-width: 768px) {
    .timeline {
      display: grid;
      grid-template-columns: 1fr 3px 1fr;
    }
    .timeline-circle {
      position: absolute;
      top: 50%;
      left: 50%;
      width: 15px;
      height: 15px;
      border-radius: 50%;
      background-color: $timeline;
      -webkit-transform: translateX(-50%);
      transform: translateX(-50%);
    }
    .timeline-middle {
      position: relative;
      display: flex;
      justify-content: center;
      align-items: center;
      background-color: $timeline;
      width: 3px;
      height: 100%;
    }
  }
</style>
