---
import Card from "../components/Card.astro";
import { getCollection } from "astro:content";
const allPosts = await getCollection("projet");
import plus from '../assets/plus.png'
import { Image } from "astro:assets";

---

<section class="project" id="project">
  <h2>Mes projets</h2>
  <div class="project-container">
    {
      allPosts.map((post) => (
        <Card
          url={`/${post.slug}/`}
          title={post.data.title}
          desc={post.data.description}
          img={post.data.img}
          balise='a'
        />
      ))
    }

    <article class="other">
      <a class="link" href="/projets"></a>
      <Image class="animate5" src={plus} alt="projet" />
    </article>
  </div>
</section>

<style lang="scss">
  .project {
    display: flex;
    flex-direction: column;
    /* background-image: url("../assets/projectbg.jpg");
  background-size: cover;
  background-repeat: no-repeat; */
    border-top: 2px solid grey;
    min-height: 100vh;
    padding: 50px 50px;
    background-color: $second;
    align-items: center;
    color: $third;
   
  }
  .project h2 {
    @include title($main)
  }
  .project-container {
    box-sizing: border-box;
    width: fit-content;
    display: grid;
    width: 100vw;
    padding: 50px;
    grid-template-columns: 2fr 2fr 2fr;
    grid-template-rows: auto;
    row-gap: 5vh;
    column-gap: 2vw;

    align-items: center;
    justify-items: center;
    @media  (max-width: 1024px) {
      grid-template-columns: 2fr 2fr;
    }
    @media  (max-width:724px) {
      grid-template-columns: 1fr;
    }
  }
  .other {
    position: relative;
    background-color: #e9e9e9;
    border-radius: 10px;
    aspect-ratio: 1;
    width: 100px;
    border: 1px solid black;
    box-shadow: 7px 7px 0px 0px rgba(0, 0, 0, 0.99);
    transition: transform 500ms, box-shadow 500ms;
    

    &:hover{
      transform: scale(1.05);
      box-shadow: 9px 9px 0px 0px rgba(0, 0, 0, 0.99);
      
      transition: transform 500ms, box-shadow 500ms;
    }
  }

  .other img {
    object-fit: cover;
    width: 100px;
    height: 100px;
    border-radius: 10px 10px 0 0;
  }
  .other a {
    position: absolute;
    top: 0;
    bottom: 0;
    left: 0;
    right: 0;
    z-index: 100;
  }
</style>
