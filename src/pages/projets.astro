---
import LayoutProjet from "../layouts/BaseLayout/LayoutProjet.astro";
import Footer from "../components/Footer.astro";
import Card from "../components/Card.astro";
import { getCollection } from "astro:content";
const allproj = await getCollection('projectlist')
---

<LayoutProjet title="Projets">
  <main>
    <h1>Projets</h1>
    <div class="container">
      {
        allproj.map((projet) => (
          <Card
            title={projet.data.titre}
            desc={projet.data.description}
            img={projet.data.image}
            balise='a'
          />
        ))
      }
    </div>
  </main>
  <Footer />
</LayoutProjet>

<style>
  main {
    min-height: 90vh;
    background-color: lightyellow;
    display: flex;
    flex-direction: column;
    align-items: center;
    padding-block: 25px;
  }

  .container {
    width: 100%;
    display: grid;
    grid-template-columns: 2fr 2fr;
    grid-template-rows: auto;
    justify-items: center;
    column-gap: 2px;
    row-gap: 5vh;
  }
</style>
