---
import { Image } from "astro:assets";
import { getCollection } from "astro:content";
import LayoutProjet from "../layouts/LayoutProjet.astro";

export async function getStaticPaths() {
  const projectEntries = await getCollection("projet");
  return projectEntries.map((entry) => ({
    params: { slug: entry.slug },
    props: { entry },
  }));
}
const head = "back";
const { entry } = Astro.props;
const { Content } = await entry.render();
---

<LayoutProjet title={entry.data.title} frontmatter={entry.data}>
  <div class="pagecontainer">
    <section class="projectpage">
      <Image
        transition:name=`animate-${entry.data.title}`
        src={entry.data.img}
        alt={entry.data.title}
      />
      <article>
        <Content />
      </article>
    </section>
  </div>
</LayoutProjet>

<style>
  h1 {
    font-size: 3rem;
  }

  .pagecontainer {
    background-image: url("../assets/projectbgg.jpg");
    display: flex;
    flex-direction: column;
    align-items: center;
    min-height: 90vh;
  }
  .projectpage {
    margin-top: 30px;
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: space-between;
    gap: 50px;
  }
  .projectpage img {
    padding: 25px;
    max-width: 50%;
    object-fit: contain;
  }
  .projectpage p {
    padding: 25px;
  }
</style>
