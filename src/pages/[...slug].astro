---
import { Image } from "astro:assets";
import { getCollection } from "astro:content";
import LayoutProjet from "../layouts/BaseLayout/LayoutProjet.astro";

export async function getStaticPaths() {
  const projectEntries = await getCollection("projet");
  return projectEntries.map((entry) => ({
    params: { slug: entry.slug },
    props: { entry },
  }));
}

const { entry } = Astro.props;
const { Content } = await entry.render();
---

<LayoutProjet title={entry.data.title} frontmatter={entry.data}>
  <main class="pagecontainer">
    <h1>{entry.data.title}</h1>
    <section class="projectpage">
      <Image
        transition:name=`animate-${entry.data.title}`
        src={entry.data.img}
        alt={entry.data.title}
      />
      <article>
        <Content />
      </article>
    </section>
  </main>
</LayoutProjet>

<style lang="scss">
  
h1{
  @include title($main);
  
}

  .pagecontainer {
    background-color: $second;
    display: flex;
    flex-direction: column;
    justify-content:center;
    align-items:center;
    padding: 100px 50px;
  }
  .projectpage {
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    align-items: center;
    gap: 50px;
    @media screen and (max-width:1600px) {
      flex-direction: column;
      align-items: center;
    }
    
  }
  .projectpage img {
    object-fit: cover;
    padding: 5px;
    height: 30%;
    width: 70%;
    background-color: $third;    
    border-radius: 30px;
  }
  .projectpage p {
    padding: 25px;
    
  }
</style>
