---
import { Picture } from "astro:assets";
const { type } = Astro.props;
import logo from "../assets/bannerimg/logo.png";
import { Icon } from "astro-icon";
---
<header class="header">
  {
    type == "projet" && (
      <div class="logo">
        <a href="/#project">
          <Icon pack="ri" name="arrow-drop-left-line" />
          back
          </a>
          </div>
          )
        }

  {
    type == "base" && (
      <div class="logohead">
        <a href="./">
          {" "}
          <Picture src={logo} alt="logo" />
          </a>
          </div>
          )
        }
  <nav class="navbar">
    <ul>
      <li>
        <a class='navlink' href="./#project">Mes projets</a>
      </li>
      <li>
        <a class='navlink' href="./#comp">Competences</a>
      </li>
      <li>
        <a class='navlink' href="./#contact">Contact</a>
      </li>
    </ul>
  </nav>
</header>

<script>
  const select = document.querySelector('.navlink')
  select?.classList.add('navlinkscrollsmooth') 
</script>
<style lang="scss">
  .header {
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    align-items: center;
    background-color: rgba($third, 0.1);
    box-shadow:
    0px 10px 13px -7px #000000,
    5px 5px 15px 5px rgba(0, 0, 0, 0);
    height: 8vh;
    width: 100vw;
    z-index: 100;
    position: fixed;
    top: 0;
    transition: background-color 200ms;
    overflow-x: clip;
    
    &:hover {
      background-color: $third;
      transition: background-color 200ms;
    }
  }

  .logo {
    margin-left: 30px;

    & a {
      display: flex;
      color: $text-prim;
      text-decoration: none;
      align-items: center;
      & [astro-icon] {
        width: 30px;
      }
    }
  }

  .logohead {
    margin-left: 30px;
    & img {
      height: 40px;
      width: 40px;
    }
  }
  .logohead a {
    color: $text-prim;
    text-decoration: none;
  }

  .navbar ul {
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    gap: 25px;
    margin-right: 50px;
  }
  .navbar ul li {
    list-style: none;
    font-size: clamp(12px,1vw,16px);

  }
  .navbar ul li a {
    color: $text-prim;
    text-decoration: none;
    text-shadow:
      1px 0 black,
      0 -1px black,
      -1px 0 black,
      0 1px black;
  }
</style>
